@model PersonalSiteMVC.UI.Models.ContactViewModel

@{
    ViewBag.Title = "William McCarty | Contact";
}

<div class="container-fluid p-0">
    <section class="resume-section" id="about">
        <div class="resume-section-content">
            <h1 class="mb-0 textShadow">
                William
                <span class="text-primary">McCarty</span>
            </h1>
            <div class="subheading mb-5">
                1210 Faulkner Drive · Pleasant Hill, MO 64080 · (816) 288-0274 ·
                <a href="mailto:WilliamMcCarty1@outlook.com">WilliamMcCarty1@outlook.com</a>
            </div>
            <p class="lead mb-5">I am a graduate of the full-stack web development program at Centriq. I have been working within the Information Technology field for over 30 years. In July 2021 I decided to go back to school to update my skills with the new technology being used in the computer programming field.  I have done desktop application development, website development and SQL Server development.  I am experienced in leveraging agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative thinking to further the overall value of the business.</p>
            <div class="social-icons">
                <a class="social-icon" style="box-shadow: 7px 5px 5px #999" href="https://www.linkedin.com/in/william-j-mccarty/" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                <a class="social-icon" style="box-shadow: 7px 5px 5px #999" href="https://github.com/williammccarty" target="_blank"><i class="fab fa-github"></i></a>
                <!--<a class="social-icon" href="#!"><i class="fab fa-twitter"></i></a>-->
                <a class="social-icon" style="box-shadow: 7px 5px 5px #999" href="https://www.facebook.com/bill.mccarty.522" target="_blank"><i class="fab fa-facebook-f"></i></a>
            </div>
        </div>
    </section>
    <hr class="m-0" />
    <section class="resume-section" id="experience">
        <div class="resume-section-content">
            <h2 class="mb-5 textShadow text-center">Get In Contact With Me</h2>
            <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                <div class="flex-grow-1">
                    <h4 class="mb-0 text-center">
                        <span class="text-center" id="messageBack" style="font-weight: bold;"></span>
                    </h4>
                    <div class="subheading mb-3 classMemberName textShadow"></div>
                    <p class="classMemberBio textShadow">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <table align="center">
                                <tbody>
                                    <tr>
                                        <td style="padding: 4px">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control textareaNoResize", placeholder = "Name", rows = "1", cols = "27" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </td>
                                        <td style="padding: 5px">
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control textareaNoResize", placeholder = "Email", rows = "1", cols = "27" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table align="center">
                                <tbody>
                                    <tr>
                                        <td style="padding: 5px">
                                            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control textareaNoResize", placeholder = "Subject", rows = "1", cols = "60" } })
                                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table align="center">
                                <tbody>
                                    <tr>
                                        <td style="padding: 5px">
                                            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", placeholder = "Message", rows = "5", cols = "60" } })
                                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table align="center">
                                <tbody>
                                    <tr>
                                        <td style="padding: 7px">
                                            <input type="submit" class="btn-outline-dark" value="Send" style="width: 250px" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        }
                    </p>
                </div>
            </div>
        </div>
    </section>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <h3>@Html.Raw(ViewBag.ErrorMessage)</h3>
}