<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="William McCarty Personal Site" />
    <meta name="keyword" content="William McCarty, William,McCarty, HTML5, CSS3, jQuery, JavaScript, jQueryUI, Responsive Mobile, Web Development, Bootstrap, C#, .NET, MVC, Agile, Scrum, SQL" />
    <meta name="author" content="William J. McCarty" />
    <meta http-equiv="cache-control" content="no-cache, must-revalidate, post-check=0, pre-check=0" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
    <title>@ViewBag.Title</title>
    <!--<link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />-->
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />
    <!-- Flickity CSS -->
    <link href="~/Content/css/flickity.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="~/">
            <span class="d-block d-lg-none">William McCarty</span>
            <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="~/Content/images/profilepic.jpg" alt="William McCarty Picture" title="Profile Picture William McCarty" /></span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav">
                @if (HttpContext.Current.Request.Url.AbsolutePath == "/")
                {
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Index","Home")"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i>&nbsp;&nbsp;William McCarty&nbsp;&nbsp;<i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a></li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Index","Home")">&nbsp;&nbsp;William McCarty&nbsp;&nbsp;</a></li>
                }

                @if (HttpContext.Current.Request.Url.AbsolutePath == "/Home/Resume")
                {
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Resume","Home")"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i>&nbsp;&nbsp;Resume&nbsp;&nbsp;<i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a></li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Resume","Home")">&nbsp;&nbsp;Resume&nbsp;&nbsp;</a></li>
                }

                @if (HttpContext.Current.Request.Url.AbsolutePath == "/Home/Portfolio")
                {
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Portfolio","Home")"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i>&nbsp;&nbsp;Portfolio&nbsp;&nbsp;<i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a></li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Portfolio","Home")">&nbsp;&nbsp;Portfolio&nbsp;&nbsp;</a></li>
                }

                @if (HttpContext.Current.Request.Url.AbsolutePath == "/Home/Links")
                {
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Links","Home")"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i>&nbsp;&nbsp;Links&nbsp;&nbsp;<i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a></li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Links","Home")">&nbsp;&nbsp;Links&nbsp;&nbsp;</a></li>
                }

                @if (HttpContext.Current.Request.Url.AbsolutePath == "/Home/Contact")
                {
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Contact","Home")"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i>&nbsp;&nbsp;Contact&nbsp;&nbsp;<i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a></li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link js-scroll-trigger" href="@Url.Action("Contact","Home")">&nbsp;&nbsp;Contact&nbsp;&nbsp;</a></li>
                }
            </ul>
        </div>
    </nav>
    <!-- Page Content-->
    @RenderBody()
    <!-- //Page Content -->
    <hr class="m-0" />
    <footer class="footer-style textShadow">
        &copy; Copyright <span id="copyrightYear"></span> William McCarty
    </footer>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/Content/js/scripts.js"></script>
    <!-- Custom JS -->
    <script src="~/Content/js/main.js"></script>
    <script src="~/Content/js/flickity.pkgd.js"></script>
    <script src="~/Content/js/jquery.js"></script>
</body>
</html>
